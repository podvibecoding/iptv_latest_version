# Production Environment - api.365upstream.com
NODE_ENV=production
PORT=5000

# Database Configuration
# IMPORTANT: Update these with your actual production database credentials
DB_HOST=localhost
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_database_password
DB_NAME=iptv_database

# JWT Configuration
# IMPORTANT: Generate a strong secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_generated_64_character_random_secret_key_here_change_this
JWT_EXPIRES_IN=7d

# Email Configuration (Gmail SMTP)
# IMPORTANT: Use App-Specific Password from Google Account settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM=IPTV Admin <your-email@gmail.com>

# Frontend URL - Your Production Domain
FRONTEND_URL=https://365upstream.com

# CORS Origin
CORS_ORIGIN=https://365upstream.com

# Upload Directory
UPLOAD_DIR=./uploads

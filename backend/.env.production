# Production Environment Variables for Backend

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration - UPDATE WITH YOUR PRODUCTION DATABASE
DB_HOST=localhost
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_NAME=iptv_database

# JWT Secret - IMPORTANT: Generate a new secure key for production
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# Frontend URL - Your production domain
FRONTEND_URL=https://365upstream.com

# Email Configuration - UPDATE WITH YOUR PRODUCTION SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@365upstream.com

# Admin Email - Where password reset emails are sent from
ADMIN_EMAIL=admin@365upstream.com

# CORS Origins - Add your production domains
CORS_ORIGINS=https://365upstream.com,https://www.365upstream.com,https://api.365upstream.com

# Session Secret - Generate a new secure key
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
